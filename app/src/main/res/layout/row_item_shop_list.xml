<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#fff"
    app:cardElevation="5dp"
    app:cardMaxElevation="7dp">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#fff"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/mechanic_image_view"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="fitXY"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="16dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center"
                android:background="@drawable/capsule_button_green">

                <TextView
                    android:id="@+id/package_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:text="View >"
                    android:textStyle="bold"
                    android:gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:background="@drawable/red_curved_button">

                <TextView
                    android:id="@+id/authStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:text=""
                    android:textStyle="bold"
                    android:gravity="center"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/mechanic_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="12sp"
                android:paddingStart="2dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingEnd="15dp"
                android:layout_marginTop="180dp"
                android:background="@drawable/skew_rectangle_background"
                />

            <LinearLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:layout_gravity="end|bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mechanic_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/maven_pro_medium"
                    android:gravity="end"
                    android:textColor="#1f1f1f"
                    android:textSize="12sp" />

                <ImageView

                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/location_away_icon" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="3">


                <TextView
                    android:id="@+id/mechanic_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:paddingEnd="5dp"
                    android:textStyle="bold"
                    android:textColor="#1f1f1f"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/mechanic_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="1"
                    android:textColor="#1f1f1f"
                    android:paddingEnd="5dp"
                    android:textSize="13sp"
                    app:fontFamily="@font/maven_pro_medium" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/road_assistance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#D32F2F"
                    android:drawablePadding="5dp"
                    android:text="Road Assistance Available"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>
